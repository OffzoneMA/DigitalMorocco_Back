      }
      .message {
        margin-top: 20px;

      }
      .btn {
        display: inline-block;
        background-color: #007bff;
        color: #ffffff;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
      }
      .footer{
        font-style: italic;
        line-height: 1em;
        color: gray;
      }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <img class="logo" src="https://firebasestorage.googleapis.com/v0/b/digital-morocco-806c5.appspot.com/o/Site_Assets%2FLogo.jpg?alt=media&token=ee407aba-4523-437a-ab73-5216912ebbd8">
    </div>
    <div class="message">
      <%- body %>
    </div>
